{
  "name": "Pearls Extension",
  "version": "1.0.4",
  "description": "Always highlight a set of words stored for chosen webpages.",  
  "update_url": "http://pearls-chrome.googlecode.com/files/pearls-update-v1.xml",
   "icons": {
      "128": "pearl128.png",
      "48": "pearl48.png"
   },
  "browser_action": {
    "default_icon": "pearl.png",
    "popup" : "popup.html"
  },
  "background_page" : "background.html",
  "content_scripts": [
    {
    	"matches" : ["http://*/*", "https://*/*" ], 
      "js": ["pearlscript.js"],
      "css" : ["pearlsstyle.css"]
    }
  ],
  "permissions": [
    "tabs"
  ]
}